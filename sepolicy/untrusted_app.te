allow untrusted_app rootfs:dir { read open };
allow untrusted_app sysfs:dir read;
# address fc due to denial for fb manager
allow untrusted_app lock_settings_service:service_manager find;

allow untrusted_app debugfs:file getattr;
allow untrusted_app proc_stat:file { open read };
allow untrusted_app sysfs:file read;
allow untrusted_app tombstone_data_file:dir search;
